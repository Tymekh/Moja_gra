<Window x:Class="Moja_gra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moja_gra"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Height="490" 
        Width="815"
        Background="Black"
        Title="Moja Gra">
    <Grid Background="Blue" Width="800" Height="450">
        <Canvas Background="AntiqueWhite" x:Name="MyGame" Focusable="True" KeyUp="KeyUp" KeyDown="KeyDown" Height="450" Width="800" MouseLeftButtonDown="MyGame_LeftClick">
            <TextBlock x:Name="tekst" Width="200" Height="50"></TextBlock>
            <Rectangle x:Name="Player" Width="50" Height="50" Fill="DarkSlateBlue" Canvas.Left="100" Canvas.Top="100"></Rectangle>
        </Canvas>
    </Grid>
</Window>

