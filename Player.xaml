<UserControl x:Class="Moja_gra.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Moja_gra"
             mc:Ignorable="d" 
             d:DesignHeight="52" d:DesignWidth="52">
    <Grid>
        <Rectangle Width="50" Height="50" Fill="Green"></Rectangle>
        <Rectangle x:Name="top" Height="1" Width="50" Margin="0 0 0 51" Fill="Transparent"/>
        <Rectangle x:Name="down" Height="1" Width="50" Margin="0 51 0 0" Fill="Transparent"/>
        <Rectangle x:Name="left" Height="50" Width="1" Margin="0 0 51 0" Fill="Transparent"/>
        <Rectangle x:Name="right" Height="50" Width="1" Margin="51 0 0 0" Fill="Transparent"/>
    </Grid>
</UserControl>
