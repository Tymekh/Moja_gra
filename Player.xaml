<UserControl x:Class="Moja_gra.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Moja_gra"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Rectangle Width="48" Height="48" Fill="Green"></Rectangle>
        <Rectangle x:Name="top" Height="1" Width="50" Margin="0 0 0 49" Fill="Green"/>
        <Rectangle x:Name="down" Height="1" Width="50" Margin="0 49 0 0" Fill="Green"/>
        <Rectangle x:Name="left" Height="50" Width="1" Margin="0 0 49 0" Fill="Green"/>
        <Rectangle x:Name="right" Height="50" Width="1" Margin="49 0 0 0" Fill="Green"/>
    </Grid>
</UserControl>
